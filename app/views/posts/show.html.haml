= render "./shared/header"
.contentswrapper
  .contents
    .uppercontents
      .uppercontents__usericon
        %text
        = @post.user.name
      .uppercontents__more
      - if user_signed_in?
        .menubar
          %label
            %i.fa.fa-ellipsis-h
            %input.acordion{:id => "list", :type => "checkbox"}
            %ul
              - if user_signed_in? && current_user.id == @post.user_id
                %li
                  = link_to '編集', "/posts/#{@post.id}/edit", method: :get
                %li
                  = link_to '削除', "/posts/#{@post.id}", method: :delete
    .contents__country
      %a
        = @post.country
    = image_tag @post.image
    .undercontents
      .undercontentsupper
        .undercontentsupper__likecount
          - if current_user.already_liked?(@post)
            = button_to post_like_path(@post), method: :delete do
              %i.fa.fa-thumbs-up
              = @post.likes.count 
          - else
            = button_to post_likes_path(@post) do
              %i.fa.fa-thumbs-up
              = @post.likes.count 
        .undercontentsupper__time
          %i.fa.fa-clock
          = @post.created_at.strftime("%Y-%m-%d")
      .undercontents__travelexpense
        %i.fa.fa-yen-sign
        = @post.travelexpense
        円
      .undercontents__post
        = @post.content
  %h2 コメント一覧
  - @comments.each do |c|
    %div
      %a{:href => "/users/#{@post.user.id}"}= c.user.name
      = c.content
      %hr/
  = form_for [@post, @comment] do |f|
    = f.text_field :content
    %br/
    = f.submit 'コメントする'
  = link_to "ホームへ戻る", posts_path



