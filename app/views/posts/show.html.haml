= render "./shared/header"
.contentswrapper
  .contents
    .uppercontents
      .uppercontents__usericon
        %text
        = @post.user.name
      .uppercontents__more
      - if user_signed_in?
        %ul.more_list
          %li
            = link_to '詳細', "/posts/#{@post.id}", method: :get
          %li
            = link_to '編集', "/posts/#{@post.id}/edit", method: :get
          %li
            = link_to '削除', "/posts/#{@post.id}", method: :delete
    .contents__country
      %a
        = @post.country
    = image_tag @post.image
    .contents__post
      = @post.content
  .container
    - if current_user
      -# = form_for[@post, @comment] do |f|
      -#   = form.text_area :comment, placeholder: "コメントする", rows: "2"
      -#   = form.submit "SEND"
    - else
      %strong
        %p ※※※ コメントの投稿には新規登録/ログインが必要です ※※※


