= render "./shared/header"
.contentswrapper
  - @posts.each do |post|
    .contents
      .uppercontents
        .uppercontents__usericon
          %text
          = post.user.name
        .uppercontents__more
          .menubar
            %label
              %i.fa.fa-ellipsis-h
              %input.acordion{:id => "list", :type => "checkbox"}
              %ul
                %li
                  = link_to '詳細', "/posts/#{post.id}", method: :get
                %li
                  = link_to '編集', "/posts/#{post.id}/edit", method: :get
                %li
                  = link_to '削除', "/posts/#{post.id}", method: :delete
      .contents__country
        %a
          = post.country
      = image_tag post.image
      .undercontents
        .undercontents__likecount
          %i.fa.fa-thumbs-up
          = post.liked_users.count
        .undercontents__time
          %i.fa.fa-clock
          = post.created_at.strftime("%Y-%m-%d")
        .undercontents__travelexpense
          %i.fa.fa-yen-sign
          = post.travelexpense
          円
        .undercontents__post
          = post.content